<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.csstudio.platform.libs.dal.plugs">
      <plug
            id="GDA"
            name="GDA plug"
            propertyFactoryClass="gda.dal.GdaPropertyFactory">
      </plug>
   </extension>
  
  <extension 
   	     point="org.csstudio.sds.ui.widgetEditParts">
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.SVGEditPart"
            typeId="org.csstudio.sds.components.SVG"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.AttenuatorEditPart"
            typeId="org.csstudio.sds.components.Attenuator"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.ArrowEditPart"
            typeId="org.csstudio.sds.components.Arrow"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.SlitsEditPart"
            typeId="org.csstudio.sds.components.Slits"/>   
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.ImageButtonEditPart"
            typeId="org.csstudio.sds.components.ImageButton"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.MoveableWindowEditPart"
            typeId="org.csstudio.sds.components.MoveableWindow"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.MoveableTitleBarEditPart"
            typeId="org.csstudio.sds.components.MoveableTitleBarModel"/>      
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.ScannableControlEditPart"
            typeId="org.csstudio.sds.components.ScannableControl"/> 
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.TempCircleEditPart"
            typeId="org.csstudio.sds.components.TempCircle"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.DeviceNameEditPart"
            typeId="org.csstudio.sds.components.DeviceName"/>
      <widgetEditPart
            class="gda.dal.csswidgets.editparts.ComboEditPart"
            typeId="uk.ac.gda.dal.combo">
      </widgetEditPart>
      
      </extension>
   	  <extension
         point="org.csstudio.sds.widgetModelFactories">
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.SVGModelFactory"
            description="Creates an SVG image."
            icon="icons/image.png"
            name="SVG Image"
            typeId="org.csstudio.sds.components.SVG"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.AttenuatorModelFactory"
            description="Creates an attenuator device."
            icon="icons/attenuator.png"
            name="Attenuator Device"
            typeId="org.csstudio.sds.components.Attenuator"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.ArrowModelFactory"
            description="Creates an arrow."
            icon="icons/arrow.png"
            name="Arrow"
            typeId="org.csstudio.sds.components.Arrow"/>
       <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.SlitsModelFactory"
            description="Creates slits."
            icon="icons/vslits.png"
            name="Slits"
            typeId="org.csstudio.sds.components.Slits"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.ImageButtonModelFactory"
            description="Image button"
            icon="icons/image_button.png"
            name="Image Button"
            typeId="org.csstudio.sds.components.ImageButton"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.MoveableWindowModelFactory"
            description="Moveable window"
            icon="icons/images.png"
            name="Moveable Window"
            typeId="org.csstudio.sds.components.MoveableWindow"/>
      <widgetModelFactory
            category="Controls"
            class="gda.dal.csswidgets.modelfactory.ScannableControlModelFactory"
            description="Scannable Control"
            icon="icons/scannable.png"
            name="Scannable Control"
            typeId="org.csstudio.sds.components.ScannableControl"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.TempCircleModelFactory"
            description="Temperature"
            icon="icons/temp.png"
            name="Temperature"
            typeId="org.csstudio.sds.components.TempCircle"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.DeviceNameModelFactory"
            description="Device Name"
            icon="icons/deviceicon.png"
            name="Device Name"
            typeId="org.csstudio.sds.components.DeviceName"/>
      <widgetModelFactory
            class="gda.dal.csswidgets.modelfactory.ComboModelFactory"
            description="Combo Box"
            icon="icons/combo.png"
            name="Combo Box"
            typeId="uk.ac.gda.dal.combo">
      </widgetModelFactory>
    </extension>
    
    

    
    
    
    
    
    
    
