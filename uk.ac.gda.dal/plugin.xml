   <extension
         point="org.eclipse.ui.views">
      <view
            category="uk.ac.gda.client.general.category"
            class="gda.dal.SDSView"
            icon="icons/cog_go.png"
            id="gda.dal.sdsview"
            name="Synoptic"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="gda.dal.SDSPerspective"
            icon="icons/cog_go.png"
            id="gda.dal.sdsperspective"
            name="Synoptic">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="gda.dal.DALStartup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.ide.resourceFilters">
      <filter
            pattern="*.css-sds"
            selected="false">
      </filter>
      <filter
            pattern="*.css-sdss"
            selected="false">
      </filter>
      <filter
            pattern="*.xml"
            selected="false">
      </filter>
      <filter
            pattern="*.scan"
            selected="false">
      </filter>
   
   </extension>
   <extension point="org.eclipse.ui.navigator.navigatorContent">
    	<commonFilter
	        description="Hides DAL projects"
	        id="uk.ac.gda.dal.hideProjects"
	        name="DAL projects"
	        activeByDefault="true">
	        <filterExpression>
				<or>
	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="screens"/>
	                </adapt>
	                
	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="scripts"/>
	                </adapt>

	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="SDS"/>
	                </adapt>

	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="SDS Cursors"/>
	                </adapt>

	                <adapt type="org.eclipse.core.resources.IResource">
	                    <test property="org.eclipse.core.resources.name" value="SDS Script Rules"/>
	                </adapt>
		    	</or>
	        </filterExpression>
	    </commonFilter>
	</extension>
	<extension point="org.eclipse.ui.navigator.viewer">
	    <viewerContentBinding
	          viewerId="org.eclipse.ui.navigator.ProjectExplorer">
	          <includes>
	            <contentExtension pattern="uk.ac.gda.dal.hideProjects"/> 
	          </includes>
	    </viewerContentBinding>
	</extension>   
</plugin>
